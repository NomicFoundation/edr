{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDirs": [
      "./test",
      "./src/ts"
    ],
    "composite": true
  },
  "include": [
    "./*.ts",
    "./test/**/*.ts",
    "./src/ts/**/*.ts"
  ],
  "exclude": [
    "./node_modules"
  ]
}
