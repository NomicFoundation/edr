{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "skipDefaultLibCheck": true,
    "outDir": "./dist",
    "rootDirs": [
      "./test",
      "./src/ts"
    ],
    "composite": true
  },
  "include": [
    "./*.ts",
    "./test/**/*.ts",
    "./src/ts/**/*.ts"
  ],
  "exclude": [
    "./node_modules"
  ]
}
